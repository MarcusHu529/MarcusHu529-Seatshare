<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:type="radial"
                        android:centerColor="#30FFFFFF"
                        android:endColor="#10FFFFFF"
                        android:gradientRadius="150dp" />
                    <corners android:radius="28dp" />
                </shape>
            </item>
            <item android:top="2dp">
                <shape>
                    <gradient
                        android:type="linear"
                        android:startColor="#F5FFFFFF"
                        android:endColor="#E0FFFFFF"
                        android:angle="135" />
                    <corners android:radius="26dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:type="radial"
                        android:centerColor="#20FFFFFF"
                        android:endColor="#05FFFFFF"
                        android:gradientRadius="200dp" />
                    <corners android:radius="28dp" />
                </shape>
            </item>
            <item android:top="1dp">
                <shape>
                    <gradient
                        android:type="linear"
                        android:startColor="#F8FFFFFF"
                        android:endColor="#E5FFFFFF"
                        android:angle="135" />
                    <corners android:radius="27dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>