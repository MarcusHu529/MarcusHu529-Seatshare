<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:type="radial"
                android:centerColor="#FF18453B"
                android:endColor="#DD18453B"
                android:gradientRadius="100dp" />
            <corners android:radius="20dp" />
            <stroke
                android:width="2dp"
                android:color="#80FFFFFF" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:startColor="#FF18453B"
                android:endColor="#E018453B"
                android:angle="135" />
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="#40FFFFFF" />
        </shape>
    </item>
</selector>