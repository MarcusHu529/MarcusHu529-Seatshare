<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18453B">

    <!-- Title with Logo -->
    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvSpartys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPARTY'S"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgSpartanLogo"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/spartan_logo"
            android:contentDescription="Spartan Logo" />

        <TextView
            android:id="@+id/tvSpreads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPREADS"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Main Container for Dining Halls - Horizontal Layout -->
    <LinearLayout
        android:id="@+id/diningHallContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleLayout">

        <!-- Left: Featured Dining Hall (Large Tile) -->
        <FrameLayout
            android:id="@+id/boxSnyderPhillips"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_corners"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/imgSnyderPhillips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sny_phi"
                android:contentDescription="Snyder-Phillips Hall" />

            <TextView
                android:id="@+id/txtSnyderPhillips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#80FFFFFF"
                android:gravity="center"
                android:text="@string/snyder_phillips"
                android:textColor="#18453B"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Right: Grid Layout for Remaining 6 Dining Halls -->
        <GridLayout
            android:id="@+id/diningHallGrid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:columnCount="2"
            android:rowCount="3">

            <!-- Brody -->
            <FrameLayout
                android:id="@+id/boxBrody"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/rounded_corners"
                android:clipToOutline="true">

                <ImageView
                    android:id="@+id/imgBrody"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/brody"
                    android:contentDescription="Brody Dining Hall" />

                <TextView
                    android:id="@+id/txtBrody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#80FFFFFF"
                    android:gravity="center"
                    android:text="@string/brody"
                    android:textColor="#18453B"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Case -->
            <FrameLayout
                android:id="@+id/boxCase"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/rounded_corners"
                android:clipToOutline="true">

                <ImageView
                    android:id="@+id/imgCase"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/casehall"
                    android:contentDescription="Case Dining Hall" />

                <TextView
                    android:id="@+id/txtCase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#80FFFFFF"
                    android:gravity="center"
                    android:text="@string/case_hall"
                    android:textColor="#18453B"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Owen -->
            <FrameLayout
                android:id="@+id/boxOwen"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/rounded_corners"
                android:clipToOutline="true">

                <ImageView
                    android:id="@+id/imgOwen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/owen"
                    android:contentDescription="Owen Dining Hall" />

                <TextView
                    android:id="@+id/txtOwen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#80FFFFFF"
                    android:gravity="center"
                    android:text="@string/owen"
                    android:textColor="#18453B"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Shaw -->
            <FrameLayout
                android:id="@+id/boxShaw"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/rounded_corners"
                android:clipToOutline="true">

                <ImageView
                    android:id="@+id/imgShaw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shaw"
                    android:contentDescription="Shaw Dining Hall" />

                <TextView
                    android:id="@+id/txtShaw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#80FFFFFF"
                    android:gravity="center"
                    android:text="@string/shaw"
                    android:textColor="#18453B"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Akers -->
            <FrameLayout
                android:id="@+id/boxAkers"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/rounded_corners"
                android:clipToOutline="true">

                <ImageView
                    android:id="@+id/imgAkers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/akers"
                    android:contentDescription="Akers Dining Hall" />

                <TextView
                    android:id="@+id/txtAkers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#80FFFFFF"
                    android:gravity="center"
                    android:text="@string/akers"
                    android:textColor="#18453B"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Landon -->
            <FrameLayout
                android:id="@+id/boxLandon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/rounded_corners"
                android:clipToOutline="true">

                <ImageView
                    android:id="@+id/imgLandon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/landon"
                    android:contentDescription="Landon Dining Hall" />

                <TextView
                    android:id="@+id/txtLandon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#80FFFFFF"
                    android:gravity="center"
                    android:text="@string/landon"
                    android:textColor="#18453B"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>

        </GridLayout>

    </LinearLayout>

    <!-- Login Button at Bottom -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#B3FFFFFF"
        android:text="@string/login"
        android:textColor="#18453B"
        android:textSize="14sp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="16dp"
        app:strokeColor="#18453B"
        app:strokeWidth="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>