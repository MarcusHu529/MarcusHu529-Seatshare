<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- App Bar Layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Title Bar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#18453B"
            app:layout_scrollFlags="scroll|enterAlways">

            <TextView
                android:id="@+id/menuTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Dining Hall Menu"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

        <!-- Meal Time Tabs -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#18453B"
            app:tabIndicatorColor="@android:color/white"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextColor="#B0B0B0"
            app:tabMode="fixed">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinner" />

        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Action Buttons Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- First Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBack"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="Back"
                        android:textSize="14sp"
                        app:backgroundTint="#18453B"
                        app:icon="@android:drawable/ic_menu_revert"
                        app:iconSize="18dp"
                        app:iconTint="@android:color/white" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSeating"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="Seating"
                        android:textSize="14sp"
                        app:backgroundTint="#18453B"
                        app:icon="@android:drawable/ic_menu_preferences"
                        app:iconSize="18dp"
                        app:iconTint="@android:color/white" />

                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectDate"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="Today"
                        android:textSize="14sp"
                        app:backgroundTint="#18453B"
                        app:icon="@android:drawable/ic_menu_my_calendar"
                        app:iconSize="18dp"
                        app:iconTint="@android:color/white" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDirections"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="Directions"
                        android:textSize="14sp"
                        app:backgroundTint="#18453B"
                        app:icon="@android:drawable/ic_dialog_map"
                        app:iconSize="18dp"
                        app:iconTint="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

            <!-- Menu Summary Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/menuSummaryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvMenuDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Menu"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvMenuSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0 stations â€¢ 0 items"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Loading Progress -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="24dp"
                android:visibility="gone" />

            <!-- No Data Message -->
            <TextView
                android:id="@+id/tvNoData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="24dp"
                android:text="No menu data available.\nPull down to refresh."
                android:textSize="16sp"
                android:textColor="#666666"
                android:visibility="gone" />

            <!-- Station List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewStations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="12dp"
                android:paddingBottom="12dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button for Expand/Collapse All -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabExpandCollapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_view"
        app:backgroundTint="#18453B"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>