<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18453B">

    <!-- Title with Logo -->

    <!-- Main Container for Dining Halls -->

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="4dp"
        android:paddingEnd="16dp"
        android:paddingBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvSpartys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPARTY'S"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNearestHall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Determining nearest dining hall..."
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/imgSpartanLogo"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Spartan Logo"
            android:src="@drawable/spartan_logo" />

        <TextView
            android:id="@+id/tvSpreads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPREADS"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/diningHallContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleLayout">

        <!-- Top Featured Dining Hall (Full Width) -->
        <FrameLayout
            android:id="@+id/boxSnyderPhillips"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_corners"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/imgSnyderPhillips"
                android:layout_width="match_parent"
                android:layout_height="243dp"
                android:contentDescription="Snyder-Phillips Hall"
                android:scaleType="centerCrop"
                android:src="@drawable/sny_phi" />

            <TextView
                android:id="@+id/txtSnyderPhillips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#80FFFFFF"
                android:gravity="center"
                android:text="@string/snyder_phillips"
                android:textColor="#18453B"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Grid Layout for Remaining 6 Dining Halls -->
        <GridLayout
            android:id="@+id/diningHallGrid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:columnCount="2"
            android:rowCount="3">

        <!-- Brody -->
        <FrameLayout
            android:id="@+id/boxBrody"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_corners"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/imgBrody"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/brody"
                android:contentDescription="Brody Dining Hall" />

            <TextView
                android:id="@+id/txtBrody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#80FFFFFF"
                android:gravity="center"
                android:text="@string/brody"
                android:textColor="#18453B"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Case -->
        <FrameLayout
            android:id="@+id/boxCase"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_corners"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/imgCase"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/casehall"
                android:contentDescription="Case Dining Hall" />

            <TextView
                android:id="@+id/txtCase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#80FFFFFF"
                android:gravity="center"
                android:text="@string/case_hall"
                android:textColor="#18453B"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Owen -->
        <FrameLayout
            android:id="@+id/boxOwen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_corners"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/imgOwen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/owen"
                android:contentDescription="Owen Dining Hall" />

            <TextView
                android:id="@+id/txtOwen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#80FFFFFF"
                android:gravity="center"
                android:text="@string/owen"
                android:textColor="#18453B"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Shaw -->
        <FrameLayout
            android:id="@+id/boxShaw"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_corners"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/imgShaw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/shaw"
                android:contentDescription="Shaw Dining Hall" />

            <TextView
                android:id="@+id/txtShaw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#80FFFFFF"
                android:gravity="center"
                android:text="@string/shaw"
                android:textColor="#18453B"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Akers -->
        <FrameLayout
            android:id="@+id/boxAkers"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_corners"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/imgAkers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/akers"
                android:contentDescription="Akers Dining Hall" />

            <TextView
                android:id="@+id/txtAkers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#80FFFFFF"
                android:gravity="center"
                android:text="@string/akers"
                android:textColor="#18453B"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Landon -->
        <FrameLayout
            android:id="@+id/boxLandon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_corners"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/imgLandon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/landon"
                android:contentDescription="Landon Dining Hall" />

            <TextView
                android:id="@+id/txtLandon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#80FFFFFF"
                android:gravity="center"
                android:text="@string/landon"
                android:textColor="#18453B"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        </GridLayout>

    </LinearLayout>

    <!-- Login Button at Bottom -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#B3FFFFFF"
        android:text="@string/login"
        android:textColor="#18453B"
        android:textSize="16sp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="16dp"
        app:strokeColor="#18453B"
        app:strokeWidth="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
